<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="client.Controller"
      style="-fx-background-color: #f0f0f0; -fx-padding: 20px;">

    <HBox alignment="TOP_RIGHT" >  
      <Label fx:id="userNameLabel" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
    </HBox>


    <!-- Message Label -->
    <Label fx:id="messageLabel" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
   

    <!-- Options Box -->
    <VBox fx:id="optionsBox" style="-fx-spacing: 10px;" />

</VBox>
